generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int      @id @default(autoincrement())
  email               String   @unique
  nickname            String   @unique
  auth_type           AuthType @default(CLASSIC)
  password            String?
  role                Role     @default(USER)
  crypto_currencies   Json?
  keywords            Json?
  default_currency_id Int
  default_currency    Currency @relation(fields: [default_currency_id], references: [id])
  created_at          DateTime @default(now())
}

model RssSource {
  id  Int     @id @default(autoincrement())
  url String  @unique
}

enum AuthType {
  CLASSIC
  GOOGLE
}

enum Role {
  USER
  ADMIN
}

model Currency {
  id   Int    @id @default(autoincrement())
  name String @unique
  User User[]
}

model Cryptocurrency {
  id   String @id @unique
}
